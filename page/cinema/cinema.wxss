/* page/cinema/cinema.wxss */

.address, .distance{
  font-size:12px; 
  color: #888888;
}

.price {
  color: #ff0000
}

.center {
  float: left;
  position:relative;
  left:50%;
}

.hidden{
  display: none
}

.show {
  margin-top: 5px;
}

.sort-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.sort{
  display: flex;
  align-items: center;
  margin-right: 30rpx;
}

.city{
  display: flex;
  align-items: center;
  margin-right: 5rpx;
  margin-left: 5rpx;
}

 .city:after, .sort::after {
  content: ' ';
  height: .5em;
  width: .5em;
  border-right: 1px solid #888;
  border-bottom: 1px solid #888;
  border-top: 1px solid transparent;
  border-left: 1px solid transparent;
  margin-left: .5em;
  margin-top: -0.35em;
  transform: rotate(45deg);
} 

.area {
  margin-left: 30rpx;
}

.icon {
  margin-left: .5em;
  color: #888;
}

.pop-container {
  overflow: hidden;
  background: #fff;
}

.pop-container-left{
  height: 100vh;
}