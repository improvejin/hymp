/* page/movie/movie.wxss */
.container {
    background-color: #F2f2f2;
}

.flex {
  display: flex;
  align-items: center;
}

/*l_auto:占用剩下的*/
.flex_auto {
  flex: 1;
}


.swiper_box {
    width: 100%;
    height: 480rpx;
}

swiper-item image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

view.text {
    display: flex;
    align-items: center;
    position: relative;
    padding: 10px 10px 10px 12px;
    font-size: 15px;
    color: #656565;
}

view.text:before {
    position: absolute;
    display: block;
    content: ' ';
    left: -5px;
    width: 2px;
    height: 100%;
    background-color: #09bb07;
}

.line_flag {
    width: 3px;
    /* height: 100%; */
    height: 18px;
    display: inline-block;
    background-color: #09bb07;
}

view.text text {
    margin-left: 10px;
    line-height: 18px;
}

.item {
    padding: 10px;
    background-color: #fff;
    color: #787878;
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
}

.item image {
    display: block;
    width: 180rpx;
    height: 250rpx;
}

.item_middle {
    flex: 1;
    margin-left: 10px;
    padding-top: 5px;
    overflow: hidden;
}

.item_middle .title {
    font-size: 16px;
    color: #333;
}
.item_middle .sub_title {
    font-size: 14px;
    color: #666;
    margin: 2px 0px;
}

.director, .cast {
    font-size: 14px;
    color: #666;
    margin: 2px 0px;
}

.item_middle .score {
    font-size: 14px;
    color: #cf616a;
}

.item_right .action {
    /* border: 1px solid #29cc6d; */
    border: 1px solid #f44;
    border-radius: 2px;
    color: #f44;
    display: inline-block;
    padding: 4px;
    font-size: 12px;
    line-height: 16px;
    text-align: center;
}

