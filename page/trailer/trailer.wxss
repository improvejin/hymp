/* pages/trailers/trailers.wxss */
page {
  height: 100%;
}
video {
  display: flex;
  width: 100%;
  height: 450rpx;
}
image {
  width: 100%;
  height: 100%;
  

  /* width:385rpx;
height:275rpx; */


}
.page-trailers>scroll-view {
  flex: 1;
  display: flex;
}
.trailer {
  display: flex;
  padding: 15rpx 25rpx;
  border-bottom: .5px solid #ddd;
  align-items: center;
}
.trailer .image {
  width: 250rpx;
  height: 178rpx;
  position:relative;
  display:inline-block;
}
.trailer .title {
  flex: 1;
  margin-left: 25rpx;
}
.trailer.active .image {
  border: 1px solid #F59624;
  box-sizing: border-box;
}
.trailer.active .title {
  color: #F59624;
}

.front {
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 0;
  left: 0;
}
.front>.icon {
  width: 1em;
  height: 1em;
  padding: .3em;
  background-color: rgba(0, 0, 0, .5);
  border: 1px solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-content: center;
}
