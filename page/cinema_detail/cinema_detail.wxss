/* page/cinema_detail/cinema_detail.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
}

.addr {
  margin-left:10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.swiper-box {
    width: 100%;
    height: 480rpx;
}

swiper-item image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.info {
  font-size:12px; 
  color: #888888;
}

.small-font-size {
  font-size:12px; 
}

.score {
  color: #ff0000
}

.center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.display-flex {
  display: flex;
}

.start-end-time{
  width:35%; 
  margin-left:10px;
}

.channel {
  width: 77%;
  margin-left: 10px;
}

.language-hall {
  width:35%;
}
.price {
  color: #ff0000;
  font-size: 16px;
}
.weui-flex{
    align-items: center;
}

.weui-cells{
    margin-top: 0;
    opacity: 0;
    transform: translateY(-50%);
    transition: .3s;

    /* &_show{
     
    } */
}

.item_hidden {
    display: none;
}


.weui-cells_show {
     opacity: 1;
    transform: translateY(0);
}

.weui-cell{
    /* &:before{ */
        right: 15px;
    /* } */
}



.kind-list__item{
    margin: 10px 0;
    background-color: #FFFFFF;
    border-radius: 2px;
    overflow: hidden;
    /* &:first-child{
        margin-top: 0;
    } */
}
.kind-list__img{
    width: 30px;
    height: 30px;
}

.total {
  display: flex;
  align-items: center
}

.total::after {
  content: ' ';
  height: .5em;
  width: .5em;
  border-right: 1px solid #888;
  border-bottom: 1px solid #888;
  border-top: 1px solid transparent;
  border-left: 1px solid transparent;
  margin-left: .5em;
  margin-top: -0.35em;
  transform: rotate(45deg);
} 

 .total.active::after {
  border-right: 1px solid transparent;
  border-bottom: 1px solid transparent;
  border-top: 1px solid #888;
  border-left: 1px solid #888;
  margin-top: 0.35em;
}

